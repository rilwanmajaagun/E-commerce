{
  "name": "e-commerce",
  "version": "1.0.0",
  "description": "e-commerce end point",
  "main": "index.js",
  "scripts": {
    "start": "node  build/index.js",
    "pretest": "cross-env ECOMMERCE_NODE_ENV=test npm run posttest && db-migrate up && db-migrate up:seeds",
    "test": "cross-env ECOMMERCE_NODE_ENV=test nyc --reporter=text --reporter=html --reporter=lcov mocha -c --require @babel/register test/index.js -timeout 30000 --exit",
    "posttest":"cross-env ECOMMERCE_NODE_ENV=test  db-migrate reset:seeds && db-migrate reset ",
    "dev:start": "nodemon --require @babel/register src/index.js",
    "lint": "eslint --ext js .",
    "predev:start": "db-migrate up",
    "build": "babel src -d --out-dir build",
    "coverage": "ECOMMERCE_NODE_ENV=test nyc report --reporter=text-lcov | coveralls"
  },
